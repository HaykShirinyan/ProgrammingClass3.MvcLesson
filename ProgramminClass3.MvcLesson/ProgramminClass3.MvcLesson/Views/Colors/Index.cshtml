@model List<Color>

<div>
    <a asp-controller="Color" asp-action="Create" class="btn btn-primary">
        Create
    </a>

    <table class="table">
        <thead>
            <tr>
                <th>Actions</th>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var color in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Color"
                       asp-action="Edit"
                       asp-route-id="@color.Id"
                       class="btn btn-secondary">
                            Edit
                        </a>
                        
                        <a asp-controller="Color"
                       asp-action="Delete"
                       asp-route-id="@color.Id"
                       class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                    <td>
                        @color.Id
                    </td>
                    <td>
                        @color.Name
                    </td>
                    <td>
                        @color.Description
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
