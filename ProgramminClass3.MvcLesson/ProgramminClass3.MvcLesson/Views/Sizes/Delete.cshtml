@model Size

<div>
    <dl>
        <dt>
            ID
        </dt>
        <dd>
            @Model.Id
        </dd>

        <dt>
            Name
        </dt>
        <dd>
            @Model.Name
        </dd>

        <dt>
            Description
        </dt>
        <dd>
            @Model.Description
        </dd>
    </dl>

    <p>
        Are you sure that you want to delete this Size
    </p>

    <form asp-controller="Size" asp-action="Delete" asp-route-id="@Model.Id">
        <a asp-controller="Size" asp-action="Index" class="btn btn-primary">
            No
        </a>

        <button type="submit" class="btn btn-danger">
            Yes
        </button>
    </form>
</div>