@model List<Category>

    <div>
    <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
        Create
    </a>

        <table class=" table">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Categories"
                            asp-action="Edit"
                            asp-rout-id="@category.Id"
                            class="btn btn-secondary">
                            Edit
                        </a>                                                        
                        </td> 
                        <td>
                            @category.Id
                        </td>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            @category.Description
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

  