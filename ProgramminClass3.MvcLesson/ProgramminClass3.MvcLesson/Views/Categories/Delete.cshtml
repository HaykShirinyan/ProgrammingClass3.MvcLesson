@model Category

<div>
    <dl>
        <dt>
            ID
        </dt>
        <dd>
            @Model.Id
        </dd>

        <dt>
            Name
        </dt>
        <dd>
            @Model.Name
        </dd>

        <dt>
            Description
        </dt>
        <dd>
            @Model.Description
        </dd>
    <p>
        Are you sure that you want to delete this category?
    </p>

        <form asp-controller="Categories" asp-action="Delete" asp-route-id="@Model.Id">
        <div>
                <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary">
                No
            </a>

            <button type="submit" class="btn btn-primary">
                Yes
            </button>
        </div>
    </form>
</div>
