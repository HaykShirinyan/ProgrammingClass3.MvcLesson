@model List<UnitOfMeasures>
<div>
    <a asp-controller="UnitOfMeasures" asp-action="Create" class="btn btn-primary">
        Create
    </a>
        

    <table class="table">
        <thead>
            <tr>
                <th>Actions</th>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>

            </tr>
        </thead>
        
        <tbody>
            @foreach (var unitOfMeasure in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="UnitOfMeasures" asp-action="Edit" asp-route-id="@unitOfMeasure.Id"
                       class="btn btn-secondary">
                            Edit
                        </a>
                    </td>
                    <td>
                        @unitOfMeasure.Id
                    </td>
                    <td>
                        @unitOfMeasure.Name
                    </td>
                    <td>
                        @unitOfMeasure.Description
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>