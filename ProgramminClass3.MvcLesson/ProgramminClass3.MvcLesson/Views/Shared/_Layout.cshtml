<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProgramminClass3.MvcLesson</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProgramminClass3.MvcLesson.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <div class="header">
            <div class="logo-holder">
                <a asp-area="" asp-asp-controller="Home" asp-action="Index">
                    <img class="logo-image" src="~/image/logo2.jpg" alt="logo" />
                </a>
            </div>
            <div class="nav-holder">
                <ul class="navigation">
                    <li class="nav-button">
                        <a asp-area="" asp-controller="Home" asp-action="About">About us</a>
                    </li>
                    <li class="nav-button">
                        <a asp-area="" asp-controller="Home" asp-action="Menu">Menu</a>
                    </li>
                    <li class="nav-button">
                        <a asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a>
                    </li>
                </ul>
            </div>
            <div class="social-holder">
                <a href="https://www.facebook.com/search/top?q=big_daddysbbq" class="fa fa-facebook" alt="facebook" target="_blank"></a>
                <a href="https://www.instagram.com/big_daddysbbq/" class="fa fa-instagram" alt="instagram" target="_blank"></a>
                <a href="#" class="fa fa-twitter"></a>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer">
            
            <div class="contacts">
                <h3 class="discover-story">
                    Contact Us<br />
                    <a asp-area="" asp-controller="Home" asp-action="Contacts">click</a>
                </h3>
            </div>
            <div class="logo-holder">
                <a asp-area="" asp-asp-controller="Home" asp-action="Index">
                    <img class="logo-image" src="~/image/logo2.jpg" alt="logo" />
                </a>
            </div>
            <div class="soc-media">
                <h3 class="discover-story">
                    Find Us<br />
                    <a href="https://www.facebook.com/search/top?q=big_daddysbbq" class="fa fa-facebook" alt="facebook" target="_blank"></a>
                    <a href="https://www.instagram.com/big_daddysbbq/" class="fa fa-instagram" alt="instagram" target="_blank"></a>
                    <a href="#" class="fa fa-twitter"></a>
                </h3>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
