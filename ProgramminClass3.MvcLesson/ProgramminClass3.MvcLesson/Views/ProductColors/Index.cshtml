@model ProductColorListViewModel
<div>
    <div>
        <form asp-controller="ProductColors" asp-action="Create">
            <input type="hidden" asp-for="ProductId" />

            <div class="mb-3">
                <div class="input-group">
                    <select asp-for="ColorId" class="form-control">
                        <option value="">
                            -- Select Color --
                        </option>

                        @foreach (var color in Model.Colors)
                        {
                            <option value="@color.Id">
                                @color.Name
                            </option>
                        }
                    </select>

                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">
                            Add Color
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var productColor in Model.ProductColors)
            {
                <tr>
                    <td>
                        @productColor.Color.Name
                    </td>
                    <td>
                        @productColor.Color.Description
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
