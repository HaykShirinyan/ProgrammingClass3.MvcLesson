@model List<Category>

<div>
    <a asp-controller="Category" asp-action="Create" class="btn btn-primery">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>                
            </tr>
        </thead>

        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @categor.Id
                    </td>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.Description
                    </td>
                </tr>                
             }
        </tbody>
    </table>
</div>