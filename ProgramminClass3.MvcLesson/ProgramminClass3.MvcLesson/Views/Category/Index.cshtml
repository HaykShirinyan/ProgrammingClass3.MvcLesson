@model List<Category>

<div>
     <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>UnitOfMeasure</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @category.Id
                    </td>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.Description
                    </td>
                    <td>
                        @category.UnitPrice
                    </td>
                    <td>
                        @category.Quantity
                    </td>
                    <td>
                        @category.UnitOfMeasure?.Name
                    </td>
                    <td> 
                        <a asp-controller="Category" 
                        asp-action="Edit" 
                        asp-route-id="@category.Id"
                        class="btn btn-secondary">
                        Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>