@model List<Product>

<div>
    <a asp-controller="Products" asp-action="Create" class="btn btn-primary">
        Create
    </a>

    <table class="table">
        <thead>
            <tr>
                <th>Actions</th>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Type</th>
                <th>UnitOfMeasure</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Products" 
                            asp-action="Edit" 
                            asp-route-id="@product.Id"
                            class="btn btn-secondary">
                            Edit
                        </a>
                    </td>
                    <td>
                        @product.Id
                    </td>
                    <td>
                        @product.Name
                    </td>
                    <td>
                        @product.Description
                    </td>
                    <td>
                        @product.UnitPrice
                    </td>
                    <td>
                        @product.Quantity
                    </td>
                    <td>
                        @if (product.Type != null)
                        { 
                            <span>@product.Type.Name</span>
                        }
                    </td>
                    <td>
                        @product.UnitOfMeasure?.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>