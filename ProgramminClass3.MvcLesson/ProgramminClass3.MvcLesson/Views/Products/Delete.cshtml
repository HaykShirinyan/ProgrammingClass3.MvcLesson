@model Product

<div>
    <dl>
        <dt>
            ID
        </dt>
        <dd>
            @Model.Id
        </dd>

        <dt>
            Name
        </dt>
        <dd>
            @Model.Name
        </dd>

        <dt>
            Description
        </dt>
        <dd>
            @Model.Description
        </dd>

        <dt>
            Quantity
        </dt>
        <dd>
            @Model.Quantity
        </dd>

        <dt>
            Unit Price
        </dt>
        <dd>
            @Model.UnitPrice
        </dd>
    </dl>

    <p>
        Are you sure that you want to delete this product?
    </p>

   <form asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">
        <div>
            <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">
                No
            </a>

            <button type="submit" class="btn btn-primary">
                Yes
            </button>
        </div>
   </form>
</div>